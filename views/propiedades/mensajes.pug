extends ../layout/admin 

block contenido
    h2(class="text-2xl font-extrabold text-center my-10 text-verde")= pagina

    a(href="/mis-propiedades" class="rounded py-2 px-10 bg-vino hover-bg-negro text-sm font-bold text-center text-blanco uppercase my-5 inline-block w-full sm:w-auto") Volver

    div(class="mx-auto max-w-4xl bg-blanco shadow border border-vino")

        if mensajes.length 
            ul 
                each mensaje in mensajes 
                    li(class="border-verde border-b p-5")
                        p(class="font-bold text-rosaF") Nombre: 
                            span(class="font-normal")= mensaje.usuario.nombre

                        p(class="font-bold text-rosaF") Email: 
                            span(class="font-normal")= mensaje.usuario.email    

                        p(class="font-bold text-rosaF") Mensaje: 
                            span(class="font-normal")= mensaje.mensaje

                        p(class="font-bold text-rosaF") Enviado: 
                            span(class="font-normal")= formatearFecha( mensaje.createdAt )       
     
        else 
            p(class="text-center text-gray-600 p-5") No hay Mensajes   
extends ./layout/app

block contenido                     
    section(class="py-5 bg-blanco border border-rosaF shadow-lg rounded-lg")
        h2(class="text-center text-4xl font-extrabold pt-10 text-rosaF")= pagina 

        if propiedades.length
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in propiedades
                    include ./templates/card

        else 
            p(class="text-center text-gray-800 text-sm py-10") No Hay Resultados
